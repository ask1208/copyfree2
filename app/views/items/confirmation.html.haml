.signup
  = render 'signups/signup_header'
.content-main
  %section.buy-container
    %h2 購入内容の確認
    %section.item-details
      .item-details__inner
        .item-box
          .item-box__image
            = image_tag('past-tradition-_3')
          .item-box__label
            .name
              RUIMAS 高級メンズミリタリースポーツクォーツ時計
            .price
              %span ¥10,000
              %span.fee (税込) 送料込み
    %section.item-content
      .item-content__inner
        .buy-price
          .buy-price__label
            .title 支払い金額
            .price 
              %span.pay ¥10,000
        %p.buy-point
          %input{disabled: "", type: "checkbox"}/
          %label ポイントを消費（所持ポイント: P0）
        %section.payment-info
          .payment-info__inner
            .payment
              %h3 支払い方法
              = link_to '変更する', root_path, class: 'change'
            .payment-method
              %p クレジットカード
              %p ************8888
              %p 有効期限 12/30
            .credit-card-logo
              = image_tag 'visa', alt: "visa"
        %section.delivery-info
          .delivery-info__inner
            .delivery
              %h3 配送先
              = link_to '変更する', root_path, class: 'change'
            .address
              %p 〒123-4567
              %p 東京都*********
              %p 山田 山田
        .buy-btn
          = link_to '購入する', root_path, class: 'button'
= render 'signups/signup_footer'